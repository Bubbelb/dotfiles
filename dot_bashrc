# If not running interactively, don't do anything
# vim: set ft=bash:
case $- in
    *i*) ;;
      *) return;;
esac

if grep -qE '^\s*export\s+START_TMUX_ON_LOGIN=1(\s+#.*)?$' "${HOME}/.profile" || [[ "${START_TMUX_ON_LOGIN}" == 1 ]] ; then
    command -v tmux >/dev/null && [[ -z "${TMUX}" ]] && tmux new-session -A
fi

function tmux_at_login() {
    SSWITCH=(1 0)
    SSWITCH_TXT=(off on)

    if grep -qE '^\s*export\s+START_TMUX_ON_LOGIN=\S+(\s+#.*)?$' "${HOME}/.profile" ; then
        # Line 'export START_TMUX_ON_LOGIN=...' found. Will go with it.
        CURR_TMUX="$(sed -E 's/^\s*export\s+START_TMUX_ON_LOGIN=(\S+)(\s+#.*)?$/\1/' "${HOME}/.profile")"
        if [[ "${CURR_TMUX}" != "1" ]] && [[ "${CURR_TMUX}" != "1" ]] ; then
            echo "Current value in .profile for START_TMUX_ON_LOGIN wrong. Shoud be 0, or 1. Assuming 0."
            CURR_TMUX=0
        fi
        sed -iE "s/^(\s*export START_TMUX_ON_LOGIN=)\S+/\1${SSWITCH[${CURR_TMUX}]}/" "${HOME}/.profile"
        echo "Tmux start at login was ${SSWITCH_TXT[${CURR_TMUX}]}."
        echo "Now set to ${SSWITCH_TXT[${SSWITCH[${CURR_TMUX}]}]}."
    else
        echo "export START_TMUX_ON_LOGIN=1" >> "${HOME}/.profile"
        echo "No TMUX autostart found. Created and set to ON"
    fi
}

function chezmoi_onetime() {
    if [[ "${1}" == "-l" ]] ; then
        echo "Showing one-liner to rin for the first time:"
        echo
        echo 'sh -c "$(curl -fsLS get.chezmoi.io)" -- init --one-shot Bubbelb'
        echo
    elif command -v chezmoi > /dev/null ; then
        echo "Error: Chezmoi is already installed. Will not execute."
    else
        read -p "Initialize one-time Chezmoi? " -n 1 ANSWER
        echo
        if [[ "${ANSWER^}" == "Y" ]] ; then
            echo "Starting Chezmoi one-time init."
            echo "==============================="
            sh -c "$(curl -fsLS get.chezmoi.io)" -- init --one-shot Bubbelb
        fi
    fi
}

# Change default shell, if we're running distrobox
if [[ -f /run/.containerenv ]] && grep -q 'name="bbsh"' /run/.containerenv && [[ "${SHELL##*/}" == "bash" ]] ; then
    echo "Changing shell to FISH"
    chsh -s /usr/bin/fish
    exec /usr/bin/fish -l
fi

# Check if Path needs to be augmented with ~/.local/bin
if [[ -d "${HOME}/.local/bin" ]] ; then
    if ! [[ "${PATH}" =~ "${HOME}/.local/bin" ]] ; then
        export PATH="${HOME}/.local/bin:${PATH}"
    fi
fi

# CD Commands
alias -- -='cd -'
alias ...=../..
alias ....=../../..
alias .....=../../../..
alias ......=../../../../..
alias 1='cd -1'
alias 2='cd -2'
alias 3='cd -3'
alias 4='cd -4'
alias 5='cd -5'
alias 6='cd -6'
alias 7='cd -7'
